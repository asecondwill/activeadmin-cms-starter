<%= f.semantic_fields_for :properties, ActiveAdminCms::MetaFields.new( page.properties ) do |properties| %>
	<%= properties.inputs "Additional" do |extra| %>
		<%= properties.input :subtitle, as: :custom_rich_picker, config: { type: "image" } %>
		<%= properties.input :content, as: :rich %>
	<% end %>
	<%= properties.inputs "Slider" do %>
		<%= properties.has_many_meta :slider do |slides| %>
			<%= slides.input :title %>
			<%= slides.input :description %>
			<%= slides.input :image, as: :custom_rich_picker, config: { type: "image" } %>
			<%= slides.input :alt_text %>

			<%= slides.has_many_meta :reviews do |review|%>
				<%= review.input :title %>
				<%= review.input :content %>
			<% end %>
		<% end %>
	<% end %>
<% end %>
